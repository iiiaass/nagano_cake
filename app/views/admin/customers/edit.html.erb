<%=render'admin/header'%>
<h2><%=@customer.last_name %>
    <%=@customer.first_name %>の会員情報編集</h2>

<p>会員id:<%=@customer.id %></p>
<%=form_with model: @customer,url:admin_customer_path(@customer.id) do |f| %>
<p>氏名</p>
<%=f.text_field:last_name %>
<%=f.text_field:first_name %>
<p>フリガナ</p>
<%=f.text_field:last_name_kana %>
<%=f.text_field:first_name_kana %>
<p>郵便番号</p>
<%=f.text_field:postal_code %>
<p>住所</p>
<%=f.text_field:address,size: 60  %></p>
<p>電話番号</p>
<%=f.text_field:telephone_number %></p>
<p>メールアドレス</p>
<%=f.text_field:email %></p>
<p>会員ステータス</p>
<%= f.radio_button :is_deleted, "false" %>
<%= f.label :is_deleted, "有効" %>

<%= f.radio_button :is_deleted, "true" %>
<%= f.label :is_deleted, "退会" %>
<%=f.submit "変更を保存" %>
<% end %>
<%=render'admin/header'%>
<h2>注文履歴一覧</h2>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </tr>

<% @orders.each do |order| %>
<tr>
 <td>
     <%= link_to order.created_at.strftime('%Y/%m/%d'),admin_order_path(order.id) %>
 </td>
 <td><%=order.customer.last_name %>
     <%=order.customer.first_name %></td>
 <td><% total=0 %>
     <% order.order_products.each do |order_product| %>
     <% total=total+order_product.amount %>
     <% end %>
     <%=total %></td>
</tr>
<% end %>
</table>

<%=paginate @orders %>
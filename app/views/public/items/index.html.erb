<h2>商品一覧</h2>
<table>
  <tr>
    <th>商品名</th>

  </tr>
<h2>全<%=@items.count %>件</h2>
<% @items.each do |item| %>
  <tr>
    <td>
      <%=link_to item_path(item.id) do %>
      <%=image_tag item.get_image(100,100) %>
      <% end %>
    </td>
    <td>
      <%=link_to item_path(item.id) do %>
      <%=item.name %>
      <% end %>
    </td>
    <td>￥<%=item.add_tax_price.to_s(:dalimited) %></td>
  </tr>
<% end %>
</table>
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <p>名前</p>
    <%= f.label :last_name,"(姓)"%><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder:"令和"  %>
  </div>

  <div class="field">
    <%= f.label :first_name,"(名)" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",placeholder:"道子"  %>
  </div>

　<div class="field">
　  <p>フリガナ</p>
    <%= f.label :last_name_kana,"(セイ)" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",placeholder:"レイワ" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana,"(メイ)"%><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",placeholder:"ミチコ"  %>
  </div>

  <div class="field">
    <%= f.label :email,"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"sample@example.com"  %>
  </div>

  <div class="field">
    <%= f.label :postal_code,"郵便番号(ハイフンなし)"%><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",placeholder:"0000000"  %>
  </div>

　<div class="field">
    <%= f.label :address,"住所"%><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address",size: "60x20",placeholder:"東京都渋谷区代々木神園町園町0-0"  %>
  </div>

  <div class="field">
    <%= f.label :telephone_number,"電話番号(ハイフンなし)" %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",placeholder:"0000000000"  %>
  </div>
  <div class="field">
    <%= f.label :password,"パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<p>既に登録済みの方</p>
<%=link_to "こちら" ,new_customer_session_path %>
<p>からログインしてください</p>
